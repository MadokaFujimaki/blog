@using EPiServer.Core
@model PizzeriaEpiserverSite.Models.Pages.SitePageData

@{
    Layout = null;
}

<div class="border col-md-8">
    @if (Model.HasTemplate())
    {
        <a href="@Url.PageUrl(Model.LinkURL)">
            <div class="media">
                <div class="mediaImg">
                    <img src="Url.ContentUrl(Model.PageImage)" />
                </div>
                <h2>@Model.PageName</h2>
                <p>@Html.PropertyFor(x => x.TeaserText)</p>
            </div>
        </a>
    }
    else
    {
          <div class="media">
              <div class="mediaImg">
                  <img src="@Url.ContentUrl(Model.PageImage)" />
              </div>
              <h2>@Model.PageImage</h2>
              <p>@Html.PropertyFor(x => x.TeaserText)</p>
          </div>
    }
</div>