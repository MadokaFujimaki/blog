@using PizzeriaEpiserverSite.Models.ViewModels
@using PizzeriaEpiserverSite.Models.Pages

@model  DefaultPageViewModel<FAQPage>

<h2 class="center">FAQ page</h2>
@*<hr/>*@
<br/>
<div class="navbar center backColor">
    <h3>Enter a question!</h3>
    @using (Html.BeginForm("Submit", null, null, FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" tabindex="1" name="question" value="" class="form-control" />
            <div class="input-group-btn">
                <input type="submit" tabindex="2" name="btn" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
<div class="nav-stacked center">
    <h3>FAQ list</h3>
    @foreach (var faqItem in Model.CurrentPage.FAQItems)
    {
        <hr />
        <h3>@faqItem.Question</h3>
        <p>@faqItem.Answer</p>
   
    }
</div>